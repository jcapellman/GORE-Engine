<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="GORE.UI.BattleScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Battle">

    <Grid x:Name="RootGrid" KeyDown="RootGrid_KeyDown" Loaded="RootGrid_Loaded">
        <!-- Background set in code-behind -->

        <!-- Main Battle Layout -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>

            <!-- Battle Area (Top Section) -->
            <Grid Grid.Row="0">
                <!-- Enemy Area (LEFT Side - Classic FF) -->
                <StackPanel x:Name="EnemyPanel" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Left"
                           Margin="80,0,0,0"
                           Spacing="30">
                    <!-- Enemies will be added dynamically -->
                </StackPanel>

                <!-- Party Area (RIGHT Side - Classic FF) -->
                <StackPanel x:Name="PartyPanel" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Right"
                           Margin="0,0,80,0"
                           Spacing="20">
                    <!-- Party members will be added dynamically -->
                </StackPanel>
            </Grid>

            <!-- Battle UI (Bottom Section) -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Side: Command Menu -->
                <Border Grid.Column="0" 
                       Background="#000000ee" 
                       BorderBrush="#4169E1" 
                       BorderThickness="2"
                       Margin="10">
                    <Grid>
                        <!-- Action Menu -->
                        <StackPanel x:Name="ActionMenu" 
                                   VerticalAlignment="Center"
                                   Margin="20"
                                   Spacing="15"
                                   Visibility="Collapsed">
                            <Button x:Name="AttackButton" 
                                   Content="⚔ FIGHT" 
                                   HorizontalAlignment="Stretch"
                                   Height="45"
                                   FontSize="20"
                                   FontFamily="Consolas"
                                   FontWeight="Bold"
                                   Click="AttackButton_Click"
                                   Background="#1a1a3e"
                                   Foreground="White"
                                   BorderBrush="#4169E1"
                                   BorderThickness="2"/>
                            <Button x:Name="MagicButton" 
                                   Content="✦ MAGIC" 
                                   HorizontalAlignment="Stretch"
                                   Height="45"
                                   FontSize="20"
                                   FontFamily="Consolas"
                                   FontWeight="Bold"
                                   IsEnabled="False"
                                   Background="#1a1a3e"
                                   Foreground="#666666"
                                   BorderBrush="#333333"
                                   BorderThickness="2"/>
                            <Button x:Name="ItemButton" 
                                   Content="⚗ ITEM" 
                                   HorizontalAlignment="Stretch"
                                   Height="45"
                                   FontSize="20"
                                   FontFamily="Consolas"
                                   FontWeight="Bold"
                                   IsEnabled="False"
                                   Background="#1a1a3e"
                                   Foreground="#666666"
                                   BorderBrush="#333333"
                                   BorderThickness="2"/>
                        </StackPanel>

                        <!-- Status Text -->
                        <TextBlock x:Name="StatusText" 
                                  Text="Press ENTER to continue..." 
                                  Foreground="Yellow" 
                                  FontSize="18"
                                  FontFamily="Consolas"
                                  FontWeight="Bold"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  TextWrapping="Wrap"
                                  TextAlignment="Center"
                                  Visibility="Collapsed"/>
                    </Grid>
                </Border>

                <!-- Right Side: Battle Log & Target Selection -->
                <Border Grid.Column="1" 
                       Background="#000000ee" 
                       BorderBrush="#4169E1" 
                       BorderThickness="2"
                       Margin="10">
                    <Grid>
                        <!-- Battle Log -->
                        <ScrollViewer x:Name="BattleLogScroll" 
                                     Margin="15"
                                     VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="BattleLogText" 
                                      TextWrapping="Wrap" 
                                      FontFamily="Consolas" 
                                      FontSize="16" 
                                      Foreground="White"
                                      LineHeight="22"/>
                        </ScrollViewer>

                        <!-- Target Selection -->
                        <StackPanel x:Name="TargetSelection" 
                                   Orientation="Vertical" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Margin="20"
                                   Spacing="10"
                                   Visibility="Collapsed">
                            <TextBlock Text="▶ SELECT TARGET" 
                                      Foreground="#FFD700" 
                                      FontSize="22" 
                                      FontWeight="Bold"
                                      FontFamily="Consolas"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,15"/>
                            <StackPanel x:Name="TargetButtonPanel" 
                                       Spacing="10">
                                <!-- Target buttons will be added dynamically -->
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
