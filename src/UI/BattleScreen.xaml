<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="GORE.UI.BattleScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Battle">

    <Grid x:Name="RootGrid" Background="Black" KeyDown="RootGrid_KeyDown" Loaded="RootGrid_Loaded">
        <!-- Background -->
        <Rectangle Fill="#1a0033" />
        
        <!-- Main Battle Area -->
        <Grid Margin="0,0,0,200">
            <!-- Enemy Area (Top Half) -->
            <StackPanel x:Name="EnemyPanel" 
                       VerticalAlignment="Top" 
                       HorizontalAlignment="Center"
                       Orientation="Horizontal"
                       Margin="0,100,0,0"
                       Spacing="40">
                <!-- Enemies will be added dynamically -->
            </StackPanel>

            <!-- Party Area (Bottom Half) -->
            <StackPanel x:Name="PartyPanel" 
                       VerticalAlignment="Bottom" 
                       HorizontalAlignment="Center"
                       Orientation="Horizontal"
                       Margin="0,0,0,20"
                       Spacing="60">
                <!-- Party members will be added dynamically -->
            </StackPanel>
        </Grid>

        <!-- Battle UI (Bottom) -->
        <Border Background="#000000cc" 
                VerticalAlignment="Bottom" 
                Height="200"
                BorderBrush="White" 
                BorderThickness="0,2,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Battle Log -->
                <ScrollViewer x:Name="BattleLogScroll" 
                             Grid.Row="0" 
                             Margin="20,10,20,10"
                             VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="BattleLogText" 
                              TextWrapping="Wrap" 
                              FontFamily="Consolas" 
                              FontSize="16" 
                              Foreground="White"/>
                </ScrollViewer>

                <!-- Action Menu -->
                <StackPanel x:Name="ActionMenu" 
                           Grid.Row="1" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"
                           Spacing="20"
                           Visibility="Collapsed">
                    <Button x:Name="AttackButton" 
                           Content="ATTACK" 
                           Width="120" 
                           Height="40"
                           FontSize="16"
                           FontWeight="Bold"
                           Click="AttackButton_Click"/>
                    <Button x:Name="MagicButton" 
                           Content="MAGIC" 
                           Width="120" 
                           Height="40"
                           FontSize="16"
                           FontWeight="Bold"
                           IsEnabled="False"/>
                    <Button x:Name="ItemButton" 
                           Content="ITEM" 
                           Width="120" 
                           Height="40"
                           FontSize="16"
                           FontWeight="Bold"
                           IsEnabled="False"/>
                    <Button x:Name="DefendButton" 
                           Content="DEFEND" 
                           Width="120" 
                           Height="40"
                           FontSize="16"
                           FontWeight="Bold"
                           IsEnabled="False"/>
                </StackPanel>

                <!-- Target Selection -->
                <StackPanel x:Name="TargetSelection" 
                           Grid.Row="1" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"
                           Spacing="20"
                           Visibility="Collapsed">
                    <TextBlock Text="Select Target:" 
                              Foreground="Yellow" 
                              FontSize="18" 
                              FontWeight="Bold"
                              VerticalAlignment="Center"
                              Margin="0,0,20,0"/>
                    <!-- Target buttons will be added dynamically -->
                </StackPanel>

                <!-- Status Text -->
                <TextBlock x:Name="StatusText" 
                          Grid.Row="1" 
                          Text="Press ENTER to continue..." 
                          Foreground="Yellow" 
                          FontSize="18" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20"
                          Visibility="Collapsed"/>
            </Grid>
        </Border>
    </Grid>
</Window>
