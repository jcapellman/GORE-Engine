<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="GORE.UI.BattleScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Battle">

    <Grid x:Name="RootGrid" KeyDown="RootGrid_KeyDown" Loaded="RootGrid_Loaded">
        <!-- Background set in code-behind -->

        <!-- Main Battle Layout -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>

            <!-- Battle Area (Top Section) -->
            <Grid Grid.Row="0">
                <!-- Enemy Area (LEFT Side - Classic FF) -->
                <StackPanel x:Name="EnemyPanel" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Left"
                           Margin="80,0,0,0"
                           Spacing="30">
                    <!-- Enemies will be added dynamically -->
                </StackPanel>

                <!-- Party Area (RIGHT Side - Classic FF) -->
                <StackPanel x:Name="PartyPanel" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Right"
                           Margin="0,0,80,0"
                           Spacing="20">
                    <!-- Party members will be added dynamically -->
                </StackPanel>
            </Grid>

            <!-- Battle UI (Bottom Section) - FF6 Style -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Box: Enemy List / Command Menu (FF6 Style) -->
                <Border Grid.Column="0" 
                       Margin="10"
                       CornerRadius="8"
                       BorderBrush="#6495ED"
                       BorderThickness="3">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#2B3A8F" Offset="0"/>
                            <GradientStop Color="#1C2670" Offset="0.5"/>
                            <GradientStop Color="#0F1338" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <!-- Enemy List (shown when not player's turn) -->
                        <StackPanel x:Name="EnemyList"
                                   Margin="20"
                                   Spacing="10"
                                   Visibility="Visible">
                            <TextBlock Text="ENEMIES"
                                      FontFamily="Consolas"
                                      FontSize="20"
                                      FontWeight="Bold"
                                      Foreground="Yellow"
                                      Margin="0,0,0,10"/>
                            <StackPanel x:Name="EnemyStatusList"
                                       Spacing="8">
                                <!-- Enemy rows added dynamically -->
                            </StackPanel>
                        </StackPanel>

                        <!-- Action Menu (shown on player's turn) -->
                        <StackPanel x:Name="ActionMenu" 
                                   VerticalAlignment="Center"
                                   Margin="20"
                                   Spacing="15"
                                   Visibility="Collapsed">
                            <TextBlock x:Name="ActiveCharacterName"
                                      Text="Terra"
                                      FontFamily="Consolas"
                                      FontSize="22"
                                      FontWeight="Bold"
                                      Foreground="Cyan"
                                      Margin="0,0,0,10"
                                      HorizontalAlignment="Center"/>
                            <Button x:Name="AttackButton" 
                                   Content="⚔ Fight" 
                                   HorizontalAlignment="Stretch"
                                   Height="45"
                                   FontSize="20"
                                   FontFamily="Consolas"
                                   FontWeight="Bold"
                                   Click="AttackButton_Click"
                                   Background="#1a1a3e"
                                   Foreground="White"
                                   BorderBrush="#4169E1"
                                   BorderThickness="2"/>
                            <Button x:Name="MagicButton" 
                                   Content="✦ Magic" 
                                   HorizontalAlignment="Stretch"
                                   Height="45"
                                   FontSize="20"
                                   FontFamily="Consolas"
                                   FontWeight="Bold"
                                   IsEnabled="False"
                                   Background="#1a1a3e"
                                   Foreground="#666666"
                                   BorderBrush="#333333"
                                   BorderThickness="2"/>
                            <Button x:Name="ItemButton" 
                                   Content="⚗ Item" 
                                   HorizontalAlignment="Stretch"
                                   Height="45"
                                   FontSize="20"
                                   FontFamily="Consolas"
                                   FontWeight="Bold"
                                   IsEnabled="False"
                                   Background="#1a1a3e"
                                   Foreground="#666666"
                                   BorderBrush="#333333"
                                   BorderThickness="2"/>
                        </StackPanel>

                        <!-- Status Text -->
                        <TextBlock x:Name="StatusText" 
                                  Text="Press ENTER to continue..." 
                                  Foreground="Yellow" 
                                  FontSize="18"
                                  FontFamily="Consolas"
                                  FontWeight="Bold"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  TextWrapping="Wrap"
                                  TextAlignment="Center"
                                  Visibility="Collapsed"/>
                    </Grid>
                </Border>

                <!-- Right Box: Party Status (FF6 Style) -->
                <Border Grid.Column="1" 
                       Margin="10"
                       CornerRadius="8"
                       BorderBrush="#6495ED"
                       BorderThickness="3">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#2B3A8F" Offset="0"/>
                            <GradientStop Color="#1C2670" Offset="0.5"/>
                            <GradientStop Color="#0F1338" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <!-- Party Status (Always Visible) -->
                        <StackPanel x:Name="PartyStatusList"
                                   Margin="15"
                                   Spacing="8">
                            <!-- Party member rows added dynamically -->
                        </StackPanel>

                        <!-- Target Selection Overlay -->
                        <Grid x:Name="TargetSelection" 
                             Background="#000000ee"
                             Visibility="Collapsed">
                            <StackPanel VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Margin="20"
                                       Spacing="10">
                                <TextBlock Text="▶ SELECT TARGET" 
                                          Foreground="#FFD700" 
                                          FontSize="22" 
                                          FontWeight="Bold"
                                          FontFamily="Consolas"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,15"/>
                                <StackPanel x:Name="TargetButtonPanel" 
                                           Spacing="10">
                                    <!-- Target buttons added dynamically -->
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
