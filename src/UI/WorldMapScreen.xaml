<Window
    x:Class="GORE.UI.WorldMapScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid" 
          Background="Black" 
          KeyDown="RootGrid_KeyDown"
          KeyUp="RootGrid_KeyUp"
          Loaded="RootGrid_Loaded">
        <!-- Win2D Canvas for Mode 7 rendering -->
        <canvas:CanvasControl 
            x:Name="MapCanvas"
            Draw="MapCanvas_Draw"
            CreateResources="MapCanvas_CreateResources"
            ClearColor="Black"/>

        <!-- HUD Overlay -->
        <Grid VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Location Info -->
            <StackPanel Grid.Column="0" Background="#80000000" Padding="15">
                <TextBlock x:Name="LocationText" 
                          Text="World of Balance" 
                          FontSize="24" 
                          Foreground="White"
                          FontWeight="Bold"/>
                <TextBlock x:Name="CoordinatesText" 
                          Text="X: 128, Y: 128" 
                          FontSize="16" 
                          Foreground="LightGray"
                          Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Party Info -->
            <StackPanel Grid.Column="2" Background="#80000000" Padding="15">
                <TextBlock x:Name="PartyLeaderText" 
                          Text="Terra" 
                          FontSize="20" 
                          Foreground="White"
                          FontWeight="Bold"/>
                <TextBlock x:Name="StepsText" 
                          Text="Steps: 0" 
                          FontSize="16" 
                          Foreground="LightGray"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Controls Help (bottom) -->
        <StackPanel VerticalAlignment="Bottom" 
                   HorizontalAlignment="Center" 
                   Background="#80000000" 
                   Padding="20,10"
                   Margin="0,0,0,20">
            <TextBlock x:Name="InputDebugText" 
                      FontSize="12" 
                      Foreground="Yellow" 
                      TextAlignment="Center"
                      Margin="0,0,0,5"/>
            <TextBlock FontSize="14" Foreground="White" TextAlignment="Center">
                <Run Text="Arrow Keys/WASD: Move"/>
                <Run Text="  â€¢  "/>
                <Run Text="ESC: Menu"/>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>