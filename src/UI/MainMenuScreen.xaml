<Window
    x:Class="GORE.UI.MainMenuScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <!-- Background Image -->
        <Image 
            x:Name="BackgroundImage"
            Stretch="UniformToFill"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>

        <!-- Menu Container -->
        <StackPanel 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="20">

            <!-- Game Title -->
            <TextBlock 
                x:Name="GameTitleText"
                Text="GORE ENGINE"
                FontSize="72"
                FontWeight="Bold"
                Foreground="White"
                HorizontalAlignment="Center"
                Margin="0,0,0,50">
                <TextBlock.Shadow>
                    <ThemeShadow />
                </TextBlock.Shadow>
            </TextBlock>

            <!-- New Game Button -->
            <Button 
                x:Name="NewGameButton"
                Content="New Game"
                Click="NewGameButton_Click"
                HorizontalAlignment="Stretch"
                MinWidth="300"
                FontSize="32"
                Padding="20,10"/>

            <!-- Load Game Button -->
            <Button 
                x:Name="LoadGameButton"
                Content="Load Game"
                Click="LoadGameButton_Click"
                HorizontalAlignment="Stretch"
                MinWidth="300"
                FontSize="32"
                Padding="20,10"/>

            <!-- Settings Button -->
            <Button 
                x:Name="SettingsButton"
                Content="Settings"
                Click="SettingsButton_Click"
                HorizontalAlignment="Stretch"
                MinWidth="300"
                FontSize="32"
                Padding="20,10"/>

            <!-- Exit Button -->
            <Button 
                x:Name="ExitButton"
                Content="Exit"
                Click="ExitButton_Click"
                HorizontalAlignment="Stretch"
                MinWidth="300"
                FontSize="32"
                Padding="20,10"/>

        </StackPanel>
    </Grid>
</Window>
