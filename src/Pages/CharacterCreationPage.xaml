<gore:BaseCharacterCreationPage
    x:Class="GORE.Pages.CharacterCreationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:gore="using:GORE.Pages">

    <Grid Background="#FF0000AA">
        <!-- FF6-style blue background -->
        
        <!-- Main container -->
        <Grid>
            <!-- Title -->
            <TextBlock Text="Create Your Hero"
                       Foreground="White"
                       FontSize="48"
                       FontWeight="Bold"
                       FontFamily="Segoe UI"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="0,80,0,0"/>

            <!-- Character Creation Box -->
            <Border BorderBrush="White"
                    BorderThickness="4"
                    Background="#FF0000AA"
                    Width="600"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Padding="50">
                <StackPanel>
                    <!-- Name Input Section -->
                    <TextBlock Text="Enter your hero's name:"
                               Foreground="White"
                               FontSize="24"
                               FontFamily="Segoe UI"
                               Margin="0,0,0,20"/>

                    <!-- Name Display Box -->
                    <Border BorderBrush="White"
                            BorderThickness="2"
                            Background="#FF000066"
                            Padding="20"
                            Margin="0,0,0,40">
                        <TextBlock x:Name="txtHeroName"
                                   Text="Hero"
                                   Foreground="Yellow"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   FontFamily="Segoe UI"
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Confirm/Cancel Options -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Confirm Button -->
                        <StackPanel Grid.Column="0"
                                   HorizontalAlignment="Center"
                                   Margin="0,20,0,0">
                            <Image x:Name="cursorConfirm"
                                   Source="/Assets/Cursor.png"
                                   Width="32"
                                   Height="32"
                                   Visibility="Visible"
                                   Margin="0,0,0,10"/>
                            <Border BorderBrush="White"
                                    BorderThickness="2"
                                    Background="#FF000066"
                                    Padding="30,15">
                                <TextBlock Text="Confirm"
                                           Foreground="White"
                                           FontSize="24"
                                           FontFamily="Segoe UI"/>
                            </Border>
                        </StackPanel>

                        <!-- Cancel Button -->
                        <StackPanel Grid.Column="1"
                                   HorizontalAlignment="Center"
                                   Margin="0,20,0,0">
                            <Image x:Name="cursorCancel"
                                   Source="/Assets/Cursor.png"
                                   Width="32"
                                   Height="32"
                                   Visibility="Collapsed"
                                   Margin="0,0,0,10"/>
                            <Border BorderBrush="White"
                                    BorderThickness="2"
                                    Background="#FF000066"
                                    Padding="30,15">
                                <TextBlock Text="Cancel"
                                           Foreground="White"
                                           FontSize="24"
                                           FontFamily="Segoe UI"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Controls hint -->
            <Border Background="#DD000000"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Center"
                    Padding="20,10"
                    Margin="0,0,0,20">
                <TextBlock Foreground="White"
                           FontSize="16"
                           FontFamily="Segoe UI">
                    <Run Text="Type to enter name  •  "/>
                    <Run Text="← → Select  •  "/>
                    <Run Text="Enter Confirm  •  "/>
                    <Run Text="Backspace Delete  •  "/>
                    <Run Text="Esc Cancel"/>
                </TextBlock>
            </Border>

            <!-- GORE Engine Credit -->
            <TextBlock Text="Powered by GORE Engine"
                       Foreground="#88FFFFFF"
                       FontSize="12"
                       FontFamily="Segoe UI"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom"
                       Margin="0,0,20,20"/>
        </Grid>
    </Grid>
</gore:BaseCharacterCreationPage>
